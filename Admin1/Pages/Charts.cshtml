@page
@model ChartsModel

@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Charts");
}

<div class="container-fluid px-4">
    <partial name="_Breadcrumb" />
    <div class="card mb-4">
        <div class="card-body">
            @SharedLocalizer.GetLocalizedHtmlString("Chart.js is a third party plugin that is used to generate the charts in this template. The charts below have been customized - for further customization options, please visit the official")
            <a target="_blank" href="https://www.chartjs.org/docs/latest/"> @SharedLocalizer.GetLocalizedHtmlString("Chart.js documentation.")</a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-chart-area me-1"></i>
            @SharedLocalizer.GetLocalizedHtmlString("Area Chart Example")
        </div>
        <div class="card-body"><canvas id="myAreaChart" width="100%" height="30"></canvas></div>
        <div class="card-footer small text-muted">@SharedLocalizer.GetLocalizedHtmlString("Updated yesterday at 11:59 PM")</div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    @SharedLocalizer.GetLocalizedHtmlString("Bar Chart Example")
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100%" height="50"></canvas></div>
                <div class="card-footer small text-muted">@SharedLocalizer.GetLocalizedHtmlString("Updated yesterday at 11:59 PM")</div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    @SharedLocalizer.GetLocalizedHtmlString("Pie Chart Example")
                </div>
                <div class="card-body"><canvas id="myPieChart" width="100%" height="50"></canvas></div>
                <div class="card-footer small text-muted">@SharedLocalizer.GetLocalizedHtmlString("Updated yesterday at 11:59 PM")</div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="~/assets/demo/chart-pie-demo.js"></script>
}