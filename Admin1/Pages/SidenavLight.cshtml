@page
@model SidenavLightModel
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Sidenav Light");
    Layout = "_SidenavLight";
}
<div class="container-fluid px-4">
    <partial name="_Breadcrumb" />
    <div class="card mb-4">
        <div class="card-body">
            @SharedLocalizer.GetLocalizedHtmlString("This page is an example of using the light side navigation option. By appending the")
            <code>.sb-sidenav-light</code>
            @SharedLocalizer.GetLocalizedHtmlString("class to the")
            <code>.sb-sidenav</code>
            @SharedLocalizer.GetLocalizedHtmlString("class, the side navigation will take on a light color scheme. The")
            <code>.sb-sidenav-dark</code>
            @SharedLocalizer.GetLocalizedHtmlString("is also available for a darker option.")"
        </div>
    </div>
</div>