@page
@model BenjaminCamacho.Pages.ProduccionRecetas.ProduccionRecetasModel
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Producción y recetas");
}
<div class="container-fluid px-4">
    <partial name="_Breadcrumb" />
    <div class="d-flex flex-column align-items-start gap-2 mt-4 mb-3">
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#recetaModal">
            @SharedLocalizer.GetLocalizedHtmlString("Registrar receta")
        </button>

        <button type="button" class="btn btn-outline-primary" onclick="location.href='/ProduccionRecetas/ReporteProduccionRecetas'">
            @SharedLocalizer.GetLocalizedHtmlString("Generar reporte")
        </button>
    </div>

    @await Html.PartialAsync("_FormularioRegistroReceta")

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-box-open me-1"></i>
            @SharedLocalizer.GetLocalizedHtmlString("Lista de recetas")
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Nombre")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Descripción")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Acciones")</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Nombre")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Descripción")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Acciones")</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>Limpiador Multiusos Premium</td>
                        <td>Receta base con fragancia cítrica y acción desinfectante.</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1" title="Editar" data-bs-toggle="modal" data-bs-target="#recetaModal">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-info" onclick="location.href='/ProduccionRecetas/DetalleProduccionRecetas'">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>Desinfectante Floral 2X</td>
                        <td>Fórmula concentrada para desinfección de superficies delicadas.</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#recetaModal">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-info" onclick="location.href='/ProduccionRecetas/DetalleProduccionRecetas'">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/assets/demo/datatables-simple-demo.js"></script>
    <script src="~/assets/demo/items-materia-prima.js"></script>
}