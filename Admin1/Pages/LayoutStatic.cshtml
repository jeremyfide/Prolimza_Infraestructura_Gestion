@page
@model LayoutStaticModel
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Static Navigation");
    Layout = "_LayoutStatic";
}

<div class="container-fluid px-4">
    <partial name="_Breadcrumb" />
    <div class="card mb-4">
        <div class="card-body">
            <p class="mb-0">
                @SharedLocalizer.GetLocalizedHtmlString("This page is an example of using static navigation. By removing the")
                <code>.sb-nav-fixed</code>
                @SharedLocalizer.GetLocalizedHtmlString("class from the")
                <code>body</code>
                @SharedLocalizer.GetLocalizedHtmlString(", the top navigation and side navigation will become static on scroll. Scroll down this page to see an example.")
            </p>
        </div>
    </div>
    <div style="height: 100vh">
    </div>
    <div class="card mb-4">
        <div class="card-body">@SharedLocalizer.GetLocalizedHtmlString("When scrolling, the navigation stays at the top of the page. This is the end of the static navigation demo.")</div>
    </div>
</div>
