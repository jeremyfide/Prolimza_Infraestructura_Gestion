@page
@model BenjaminCamacho.Pages.Account.LoginModel
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Log in");
    Layout = "_LoginLayout";
}
          
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">@SharedLocalizer.GetLocalizedHtmlString("Iniciar sesión")</h3>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Input.Email" autocomplete="username" placeholder="@SharedLocalizer.GetLocalizedHtmlString("prolimza@gmail.com")" aria-required="true" />
                            <label asp-for="Input.Email">Correo electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Input.Password" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Contraseña")" />
                            <label asp-for="Input.Password">@SharedLocalizer.GetLocalizedHtmlString("Contraseña")</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <!--
                        <div class="form-check mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        -->
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <!--<a class="small" asp-page="./ForgotPassword">@SharedLocalizer.GetLocalizedHtmlString("Forgot Password?")</a>-->
                            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Iniciar sesión")" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <!--
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@SharedLocalizer.GetLocalizedHtmlString("Need an account? Sign up!")</a>
                    </div>
                </div>
                -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

