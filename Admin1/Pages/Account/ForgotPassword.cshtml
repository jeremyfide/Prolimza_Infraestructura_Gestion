@page
@model BenjaminCamacho.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Forgot your password?");
    Layout = "_LoginLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">@SharedLocalizer.GetLocalizedHtmlString("Cambiar contraseña")</h3></div>
                <div class="card-body">
                    <!--<div class="small mb-3 text-muted">@SharedLocalizer.GetLocalizedHtmlString("Enter your email address and we will send you a link to reset your password.")</div>-->
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Input.Email" placeholder="@SharedLocalizer.GetLocalizedHtmlString("prolimza@gmail.com")" />
                            <label asp-for="Input.Email">@SharedLocalizer.GetLocalizedHtmlString("Correo electrónico")</label>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" id="inputPassword" name="password" type="password" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Contraseña actual")" />
                                    <label for="inputPassword">@SharedLocalizer.GetLocalizedHtmlString("Contraseña actual")</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" id="inputConfirmPassword" name="confirmPassword" type="password" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Contraseña nueva")" />
                                    <label for="inputConfirmPassword">@SharedLocalizer.GetLocalizedHtmlString("Contraseña nueva")</label>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-page="./Login">@SharedLocalizer.GetLocalizedHtmlString("Volver a inicio de sesión")</a>
                            <button class="btn btn-primary" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Cambiar contraseña")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>