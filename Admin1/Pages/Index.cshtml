@page
@model IndexModel

@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Inicio");
}

<div class="container-fluid px-4">
    <partial name="_Breadcrumb" />
    <div id="prolimzaCarousel" class="carousel slide mb-4 shadow-sm" data-bs-ride="carousel">
        <div class="carousel-inner rounded">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="~/img/carrousel-2.jpeg" class="d-block w-100" alt="Instalaciones Prolimza">
                <div class="carousel-caption d-none d-md-block p-3">
                    <h4 class="text-white">Bienvenido a Prolimza</h4>
                    <p>Especialistas en soluciones de limpieza profesional y eficiente.</p>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/img/carrousel-1.jpg" class="d-block w-100" alt="Productos Prolimza">
                <div class="carousel-caption d-none d-md-block p-3">
                    <h4 class="text-white">Calidad en cada producto</h4>
                    <p>Formulaciones eficientes con resultados comprobados.</p>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/img/carrousel-3.jpg" class="d-block w-100" alt="Equipo Prolimza">
                <div class="carousel-caption d-none d-md-block p-3">
                    <h4 class="text-white">Gestión inteligente</h4>
                    <p>Sistema completo para controlar inventario, recetas y ventas.</p>
                </div>
            </div>

        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#prolimzaCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#prolimzaCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/assets/demo/datatables-simple-demo.js"></script>
}