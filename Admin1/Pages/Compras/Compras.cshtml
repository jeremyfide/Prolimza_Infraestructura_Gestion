@page
@model BenjaminCamacho.Pages.Compras.ComprasModel
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Compras");
}
<div class="container-fluid px-4">
    <partial name="_Breadcrumb" />
    <div class="d-flex flex-column align-items-start gap-2 mt-4 mb-3">
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#compraModal">
            @SharedLocalizer.GetLocalizedHtmlString("Registrar compra")
        </button>
    </div>

    @await Html.PartialAsync("_FormularioRegistroCompra")

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-box-open me-1"></i>
            @SharedLocalizer.GetLocalizedHtmlString("Lista de recetas")
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Código de compra")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Proveedor")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Fecha")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Acciones")</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Código de compra")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Proveedor")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Fecha")</th>
                        <th>@SharedLocalizer.GetLocalizedHtmlString("Acciones")</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>CMP-0001</td>
                        <td>Proveedores del Norte S.A.</td>
                        <td>2025-03-28</td>
                        <td>
                            <button class="btn btn-sm btn-outline-info" onclick="location.href='/Compras/DetalleCompras'">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>CMP-0002</td>
                        <td>Materias Primas Tico</td>
                        <td>2025-03-29</td>
                        <td>
                            <button class="btn btn-sm btn-outline-info" onclick="location.href='/Compras/DetalleCompras'">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/assets/demo/datatables-simple-demo.js"></script>
    <script src="~/assets/demo/compras-registro.js"></script>
}