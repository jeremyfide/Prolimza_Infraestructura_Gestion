@page
@model Page401Model
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("401 Error");
Layout = "_LayoutError";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mt-4">
                    <h1 class="display-1">401</h1>
                    <p class="lead">@SharedLocalizer.GetLocalizedHtmlString("No autorizado")</p>
                    <p>@SharedLocalizer.GetLocalizedHtmlString("El acceso a esta página fue denegado.")</p>
                    <a asp-page="Index"><i class="fas fa-arrow-left me-1"></i>@SharedLocalizer.GetLocalizedHtmlString("Volver al inicio")</a>
                </div>
            </div>
        </div>
    </div>
</main>
