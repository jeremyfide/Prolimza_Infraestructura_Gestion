<div class="modal fade" id="recetaModal" tabindex="-1" aria-labelledby="recetaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h5 class="modal-title" id="recetaModalLabel">@SharedLocalizer.GetLocalizedHtmlString("Registrar receta")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="nombreReceta" name="nombreReceta" placeholder="Nombre de la receta" required />
                        <label for="nombreReceta">@SharedLocalizer.GetLocalizedHtmlString("Nombre de la receta")</label>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="descripcionReceta" name="descripcionReceta" style="height: 100px" placeholder="Descripción de la receta"></textarea>
                        <label for="descripcionReceta">@SharedLocalizer.GetLocalizedHtmlString("Descripción")</label>
                    </div>

                    <div id="materiasPrimasContainer">
                        <h6 class="mb-3">@SharedLocalizer.GetLocalizedHtmlString("Materias primas")</h6>

                        <!-- Materia prima (bloque dinámico) -->
                        <div class="row mb-3 materia-prima-item">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" name="materiaPrima[]" required>
                                        <option selected disabled>@SharedLocalizer.GetLocalizedHtmlString("Seleccione materia prima")</option>
                                        <option value="1">Ácido cítrico</option>
                                        <option value="2">Fragancia limón</option>
                                        <!-- Puedes cargar estos dinámicamente -->
                                    </select>
                                    <label>@SharedLocalizer.GetLocalizedHtmlString("Materia prima")</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="number" class="form-control" name="cantidadMateriaPrima[]" placeholder="Cantidad" required min="0" />
                                    <label>@SharedLocalizer.GetLocalizedHtmlString("Cantidad")</label>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex align-items-center justify-content-center">
                                <button type="button" class="btn btn-outline-danger btn-sm remove-item">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-outline-success btn-sm mb-3" id="addMateriaPrimaBtn">
                        <i class="fas fa-plus"></i> @SharedLocalizer.GetLocalizedHtmlString("Agregar otra materia prima")
                    </button>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("Guardar receta")</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Cancelar")</button>
                </div>
            </form>
        </div>
    </div>
</div>
