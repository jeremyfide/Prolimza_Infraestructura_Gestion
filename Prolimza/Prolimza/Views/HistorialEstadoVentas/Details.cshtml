@model Prolimza.Models.HistorialEstadoVenta

@{
    ViewData["Title"] = "Detalles del Historial de Estado de Venta";
}

<style>
    /* Estilo general */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-weight: 700;
        color: #2f6846;
        margin-top: 2rem;
    }

    /* Tarjeta personalizada */
    .card-custom {
        background-color: #2b7a4b;
        color: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        max-width: 600px;
        margin: 0 auto;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

        .card-custom.show {
            opacity: 1;
            transform: translateY(0);
        }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1rem;
        margin: 0.5rem 0;
    }

    strong {
        color: #c6f0d5;
    }

    /* Botones personalizados */
    .btn-green {
        background-color: #2e8644;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: bold;
        text-transform: uppercase;
        margin: 0.5rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
    }

        .btn-green:hover {
            background-color: #26a155;
            transform: translateY(-2px);
        }

        .btn-green:active {
            transform: translateY(2px);
        }
</style>

<h1 class="text-center mb-4">Detalles del Historial de Estado de Venta</h1>

<div class="card-custom" id="cardDetails">
    <h4 class="card-title">Información del Historial de Estado de Venta</h4>
    <hr class="border-light">

    <p><strong>@Html.DisplayNameFor(model => model.IdVenta):</strong></p>
    <p>@Html.DisplayFor(model => model.IdVenta)</p>

    <p><strong>@Html.DisplayNameFor(model => model.IdEstadoVenta):</strong></p>
    <p>@Html.DisplayFor(model => model.IdEstadoVenta)</p>

    <p><strong>@Html.DisplayNameFor(model => model.FechaEstado):</strong></p>
    <p>@Html.DisplayFor(model => model.FechaEstado)</p>
</div>

<div class="text-center mt-4">
    @if (!User.IsInRole("Lector"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.IdHistorialEstadoVenta" class="btn-green">Editar</a>
    }
    <a asp-action="Index" class="btn-green">Volver a la lista</a>
</div>

<script>
    // Animación suave al entrar en pantalla
    document.addEventListener('DOMContentLoaded', function () {
        const card = document.getElementById('cardDetails');

        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    card.classList.add('show');
                    observer.unobserve(card);
                }
            });
        });

        observer.observe(card);
    });
</script>
