@model Prolimza.Models.HistorialEstadoVenta

@{
    ViewData["Title"] = "Crear Historial de Estado de Venta";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .form-container {
            max-width: 500px;
            margin: 50px auto;
            background: #f7fdf9;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            animation: fadeIn 0.7s ease-in-out;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #2e8644;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-control-custom {
            border-radius: 10px;
            border: 1px solid #cdd9d2;
            padding: 12px 15px;
            margin-bottom: 20px;
            font-size: 1rem;
            width: 100%;
            transition: border-color 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: #34974d;
                outline: none;
                box-shadow: 0 0 0 0.2rem rgba(52, 151, 77, 0.25);
            }

        .text-danger {
            font-size: 0.85rem;
            color: red;
            margin-top: -15px;
            margin-bottom: 10px;
        }

        .btn-crear {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background-color: #3aa856;
            border: none;
            color: white;
            padding: 12px;
            width: 100%;
            font-weight: bold;
            font-size: 1rem;
            text-transform: uppercase;
            border-radius: 10px;
            transition: background 0.3s ease;
        }

            .btn-crear:hover {
                background-color: #2e8644;
            }

        .btn-volver {
            display: block;
            margin-top: 15px;
            text-align: center;
            color: #34974d;
            font-weight: 500;
            text-decoration: none;
        }

            .btn-volver:hover {
                text-decoration: underline;
            }

        .icon {
            width: 18px;
            height: 18px;
            stroke: white;
        }
    </style>
</head>

<form asp-action="Create" class="form-container animate__animated animate__fadeInDown">
    <p class="form-title">Registrar historial de estado</p>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <select asp-for="IdVenta" asp-items="ViewBag.IdVenta" class="form-control-custom">
        <option value="">Seleccione un Id de Venta</option>
    </select>
    <span asp-validation-for="IdVenta" class="text-danger"></span>

    <select asp-for="IdEstadoVenta" asp-items="ViewBag.IdEstadoVenta" class="form-control-custom">
        <option value="">Seleccione un estado de Venta</option>
    </select>
    <span asp-validation-for="IdEstadoVenta" class="text-danger"></span>

    <label asp-for="FechaEstado"></label>
    <input asp-for="FechaEstado" class="form-control-custom" placeholder="Fecha del cambio de estado" />
    <span asp-validation-for="FechaEstado" class="text-danger"></span>

    <button type="submit" class="btn-crear">
        <svg class="icon" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
             xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
        </svg>
        Crear
    </button>

    <a asp-action="Index" class="btn-volver">← Volver a la lista</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
