@model int
@{
    ViewData["Title"] = "Predicción de Ventas";
}

<form id="form-prediccion" class="row align-items-end mb-4" style="gap: 10px;">
    <div class="col-md-4">
        <label for="idProducto">Seleccione un producto</label>
        <select id="idProducto" name="idProducto" class="form-control" required>
            @foreach (var item in (SelectList)ViewBag.Productos)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="geex-btn geex-btn--primary-transparent">Predecir</button>
    </div>
</form>

<div id="barra-carga" class="text-center my-4" style="display: none;">
    <span id="texto-cargando" class="cargando-texto">Cargando predicción<span class="puntos"></span></span>
</div>

<div id="resultado-prediccion" class="mt-4"></div>
