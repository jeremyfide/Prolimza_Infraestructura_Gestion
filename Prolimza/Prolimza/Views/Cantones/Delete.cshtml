@model Prolimza.Models.Canton

@{
    ViewData["Title"] = "Delete";
}

<head>
    <style>
        /* Card estilo */
        .card-custom {
            background-color: #34974d;
            padding: 2rem;
            border-radius: 15px;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 600px;
            margin: auto;
            opacity: 0; /* Inicialmente invisible */
            transition: opacity 1s ease; /* Transición de opacidad */
        }

            /* Hacer la card visible al cargarse la página */
            .card-custom.loaded {
                opacity: 1;
            }

        /* Botón personalizado */
        .btn-delete {
            width: 150px;
            height: 50px;
            cursor: pointer;
            display: flex;
            align-items: center;
            background: linear-gradient(145deg, #e62222, #d81b1b);
            border: none;
            border-radius: 8px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
            position: relative;
            transition: all 0.3s ease;
            justify-content: center;
        }

            .btn-delete:hover {
                background: #ff3636;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            }

            .btn-delete .text {
                color: white;
                font-weight: bold;
                font-size: 1rem;
                transition: transform 0.3s ease;
            }

            .btn-delete .icon {
                position: absolute;
                border-left: 1px solid #c41b1b;
                transform: translateX(110px);
                height: 40px;
                width: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
            }

            .btn-delete svg {
                width: 20px;
                fill: #fff;
                transition: transform 0.2s ease;
            }

            .btn-delete:hover .text {
                transform: translateX(-10px);
                color: transparent;
            }

            .btn-delete:hover .icon {
                width: 55px;
                border-left: none;
                transform: translateX(0);
            }

            .btn-delete:active .icon svg {
                transform: scale(0.9);
            }

            .btn-delete:focus {
                outline: none;
            }

        /* Enlace para regresar a la lista */
        .back-link {
            color: white;
            margin-top: 1rem;
            font-size: 1rem;
            text-decoration: underline;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: #ffa500;
            }
    </style>
</head>

<div class="card-custom mt-5" id="deleteCard">
    <h1>Eliminar Cantón</h1>

    <h3>¿Estás seguro de que deseas eliminar este cantón?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Provincia)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Provincia.IdProvincia)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCanton" />
        <button type="submit" class="btn-delete">
            <span class="text">Eliminar</span>
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path>
                </svg>
            </span>
        </button>
        <a asp-action="Index" class="back-link">Volver a la lista</a>
    </form>
</div>

<script>
    // Añadimos la clase 'loaded' al cargarse la página para que la tarjeta se desvanezca
    window.onload = function() {
        document.getElementById('deleteCard').classList.add('loaded');
    };
</script>
