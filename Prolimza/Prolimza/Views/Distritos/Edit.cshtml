@model Prolimza.Models.Distrito

@{
    ViewData["Title"] = "Editar Distrito";
    ViewData["subTitle"] = "Formulario para editar distritos desde la perspectiva de administrador.";
}

<div class="geex-content__section geex-content__form">
    <div class="geex-content__form__wrapper">
        <form asp-action="Edit" class="form-container mt-5">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDistrito" />

            <div class="geex-content__form__single__box mb-20">
                <input asp-for="Nombre" placeholder="Nombre del distrito" />
            </div>

            <div class="geex-content__form__single__box mb-20">
                <select asp-for="IdCanton" asp-items="ViewBag.IdCanton" class="form-control">
                    <option value="">Seleccione un cantón</option>
                </select>
            </div>

            <div class="geex-validation-block text-danger mt-4 text-center">
                <span asp-validation-for="Nombre" class="text-danger"></span>
                <span asp-validation-for="IdCanton" class="text-danger"></span>
            </div>

            <div class="geex-content__form__single d-flex gap-10 justify-content-center">
                <button type="submit" class="geex-btn geex-btn--primary-transparent"><i class="uil-plus"></i> Guardar</button>
                <a asp-action="Index" class="geex-btn geex-btn--dark-transparent">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
